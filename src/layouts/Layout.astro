---
export interface Props {
  title: string;
}

const { title = "Deshmukh & Co." } = Astro.props;
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import logo from "../assets/logo.svg";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- * SEO tags -->
    <meta
      name="description"
      content="One stop to all your taxation and legal consultancy services"
    />
    <meta
      name="keywords"
      content="Labour Law, Provident Fund Consultant, ESIC Consultants, Professional Tax Consultants, Trade License Consultants, Payroll Management Services, ESIC Filling Consultants"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Deshmukh & Co." />
    <meta property="og:image"  itemprop="image"  content="https://i.imgur.com/XlQg7bs.png" />

    <meta
      property="og:description"
      content="One stop to all your taxation and legal consultancy services"
    />
    <!-- * SEO tags : END-->
    <!-- * Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant:wght@400;500;600;700&family=Rubik:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- * Google Fonts : END -->
   
    <title>{title}</title>
  </head>
  <body>
    <Navbar
      navLinks={[
        { to: "/", name: "Home" },
        { to: "/#services", name: "Services" },
        { to: "/about", name: "About" },
        { to: "/blogs", name: "Blogs" },
        { to: "/contact", name: "Contact" },
        { to: "/notify", name: "Notifications" },
      ]}
      logo={logo}
    />
    <slot />
    <Footer/>
  </body>
</html>



